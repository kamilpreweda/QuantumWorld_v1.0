<Application x:Class="QuantumWorld_v1._0.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QuantumWorld_v1._0" 
             xmlns:viewModel="clr-namespace:QuantumWorld_v1._0.ViewModel"
             xmlns:view="clr-namespace:QuantumWorld_v1._0.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewModel:OverviewViewModel}">
            <view:OverviewView/>            
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:BuildingsViewModel}">
            <view:BuildingsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ResearchViewModel}">
            <view:ResearchView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:DocksViewModel}">
            <view:DocksView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:MapViewModel}">
            <view:MapView/>
        </DataTemplate>



    </Application.Resources>
    
</Application>
