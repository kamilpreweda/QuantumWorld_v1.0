<UserControl x:Class="QuantumWorld_v1._0.View.BuildingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuantumWorld_v1._0.View"
             xmlns:viewModel="clr-namespace:QuantumWorld_v1._0.ViewModel"
             xmlns:view="clr-namespace:QuantumWorld_v1._0.View"
             xmlns:model="clr-namespace:QuantumWorld_v1._0.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="CarbonFiberBuildingStackPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel x:Name="CarbonFiberNameAndLevelStackPanel" Margin="10,10,10,10" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="CarbonFiberBuildingNameLabel" Content="CarbonFiberBuilding"/>
                <Label x:Name="CarbonFiberBuildingLevelLabel" Content="Level:"/>
                <Label x:Name="CarbonFiberBuildingLeveValueLabel" Content="{Binding CarbonFiberBuilding.Level}"/>
            </StackPanel>
            <StackPanel x:Name="CarbonFiberBuildingImageAndDescriptionStackPanel" Margin="10,10,10,10" Orientation="Horizontal">
                <Image x:Name="CarbonFiberBuildingImage" Height="100" Width="100" HorizontalAlignment="Left" Margin="10,10,10,10"/>

                <TextBox x:Name="CarbonFiberBuildingDescriptionTextBox" TextWrapping="Wrap" Text="Carbon Fiber Building Description" AllowDrop="True" Background="{x:Null}" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}" Focusable="False" BorderBrush="{x:Null}" Margin="10,10,10,10" Width="180" Height="90" BorderThickness="0"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="CarbonFiberBuildingCarbonFiberCostLabel" Content="CF: "/>
                <Label x:Name="CarbonFiberBuildingCarbonFiberCostValueLabel" Content="{Binding CarbonFiberBuilding.Cost[0].Value}"/>
                <Label x:Name="CarbonFiberBuildingQuantumGlassCostLabel" Content="QG:"/>
                <Label x:Name="CarbonFiberBuildingQuantumGlassCostValueLabel" Content="{Binding CarbonFiberBuilding.Cost[1].Value}"/>
                <Label x:Name="CarbonFiberBuildingTimeToBuildLabel" Content="0:0:10"/>
                <Button x:Name="CarbonFiberBuildingUpgradeButton" Content="Upgrade" Command="{Binding UpgradeCarbonFiberBuilding}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="QuantumGlassBuildingStackPanel" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="1">
            <StackPanel x:Name="QuantumGlassNameAndLevelStackPanel1" Margin="10,10,10,10" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="QuantumGlassBuildingNameLabel" Content="QuantumGlassBuilding"/>
                <Label x:Name="QuantumGlassBuildingLevelLabel" Content="Level:"/>
                <Label x:Name="QuantumGlassBuildingLeveValueLabel" Content="{Binding QuantumGlassBuilding.Level}"/>
            </StackPanel>
            <StackPanel x:Name="QuantumGlassBuildingImageAndDescriptionStackPanel" Margin="10,10,10,10" Orientation="Horizontal">
                <Image x:Name="QuantumGlassBuildingImage" Height="100" Width="100" HorizontalAlignment="Left" Margin="10,10,10,10"/>

                <TextBox x:Name="QuantumGlassBuildingDescriptionTextBox1" TextWrapping="Wrap" Text="Quantum Glass Building Description" AllowDrop="True" Background="{x:Null}" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}" Focusable="False" BorderBrush="{x:Null}" Margin="10,10,10,10" Width="180" Height="90" BorderThickness="0"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="QuantumGlassBuildingCarbonFiberCostLabel" Content="CF: "/>
                <Label x:Name="QuantumGlassBuildingCarbonFiberCostValueLabel" Content="{Binding QuantumGlassBuilding.Cost[0].Value}" ContentStringFormat="{}{0:F2}"/>
                <Label x:Name="QuantumGlassBuildingQuantumGlassCostLabel" Content="QG:"/>
                <Label x:Name="QuantumGlassBuildingQuantumGlassCostValueLabel" Content="{Binding QuantumGlassBuilding.Cost[1].Value}" ContentStringFormat="{}{0:F2}"/>
                <Label x:Name="QuantumGlassBuildingTimeToBuildLabel" Content="0:0:10"/>
                <Button x:Name="QuantumGlassBuildingUpgradeButton" Content="Upgrade" Command="{Binding UpgradeQuantumGlassBuilding}" ContentStringFormat="{}{0:F2}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
