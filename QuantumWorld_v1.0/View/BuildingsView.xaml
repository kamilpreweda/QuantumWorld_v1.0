<UserControl x:Class="QuantumWorld_v1._0.View.BuildingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuantumWorld_v1._0.View"
             xmlns:viewModel="clr-namespace:QuantumWorld_v1._0.ViewModel"
             xmlns:view="clr-namespace:QuantumWorld_v1._0.View"
             xmlns:model="clr-namespace:QuantumWorld_v1._0.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="CarbonFiberBuildingStackPanel" Margin="10,10,10,10">
            <StackPanel x:Name="CarbonFiberNameAndLevelStackPanel" Margin="10,10,10,10" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="CarbonFiberBuildingNameLabel" Content="CarbonFiberBuilding"/>
                <Label x:Name="CarbonFiberBuildingLevelLabel" Content="Level:"/>
                <Label x:Name="CarbonFiberBuildingLeveValueLabel" Content="0"/>
            </StackPanel>
            <StackPanel x:Name="CarbonFiberBuildingImageAndDescriptionStackPanel" Margin="10,10,10,10" Orientation="Horizontal">
                <Image x:Name="CarbonFiberBuildingImage" Height="100" Width="100" HorizontalAlignment="Left" Margin="10,10,10,10"/>
                <TextBox x:Name="CarbonFiberBuildingDescriptionTextBox" TextWrapping="Wrap" Text="Carbon Fiber Building Description"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="CarbonFiberBuildingCarbonFiberCostLabel" Content="CF: "/>
                <Label x:Name="CarbonFiberBuildingQuantumGlassCostLabel" Content="QG:"/>
                <Label x:Name="CarbonFiberBuildingTimeToBuildLabel" Content="0:0:10"/>
                <Button x:Name="CarbonFiberBuildingUpgradeButton" Content="Upgrade"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
