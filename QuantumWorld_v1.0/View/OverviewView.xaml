<UserControl x:Class="QuantumWorld_v1._0.View.OverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuantumWorld_v1._0.View"
             xmlns:viewModel="clr-namespace:QuantumWorld_v1._0.ViewModel"
             xmlns:view="clr-namespace:QuantumWorld_v1._0.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="OverviewViewPlanetInfoStackPanel" Margin="10,10,10,10"/>
        <StackPanel x:Name="OverviewViewPlayerInfoStackPanel" Grid.Column="1" Margin="10,10,10,10">
            <Label x:Name="PlayerNameLabel" Content="{Binding Player.Name}" Margin="10,10,10,10"/>
        </StackPanel>

    </Grid>
</UserControl>
